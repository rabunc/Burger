<h1 id="page-title">Prayer.gg</h1>
<img id="burger-icon" src="https://ibb.co/JshBDzS"><img>

<div id="undevoured-burgers">
    <h2>Prayer Requests!</h2>

    <ul>
        {{#each burgers}} {{#unless this.devoured}}
        <li>
            {{this.burger_name}}

            <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button type="submit">Devour it!</button>
            </form>
        </li>
        {{/unless}} {{/each}}
    </ul>
</div>

<div id="devoured-burgers">
<h2>Completed Prayers!</h2>
<ul>
    {{#each burgers}} {{#if this.devoured}}
    <li>
        {{this.burger_name}}
        </form>
    </li>
    {{/if}} {{/each}}
</ul>
</div>

<h2>Add a Prayer Request</h2>
<form class="create-update-form" action="/" method="POST">

    <div class="form-group">
        <label for="new_burger">Prayer Request:</label>
        <input type="text" id="new_burger" name="burger_name">
    </div>

    <button type="submit">Submit</button>
</form>