<h1>Eat Da Burger!</h1>

<h2>Burgers!</h2>

<ul>
  {{#each burger}}
    {{#unless this.devoured}}
      <li>
        {{this.name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Devour it!</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers!</h2>

<ul>
  {{#each burger}}
    {{#if this.devoured}}
      <li>
        {{this.name}}
        </form>
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="new_burger">Burger Name:</label>
    <input type="text" id="new_burger" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>

